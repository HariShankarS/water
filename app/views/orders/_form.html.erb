<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-10 col-md-offset-1">
  <div class="form-group">
    <%= f.label :number_of_cans %>
    <%= f.number_field :number_of_cans, :value => 1, :min => 1, :max => 20, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :water_brand %>
    <%= f.select(:water_brand, ["Bisleri", "Kinley", "Bublee", "Aquafina", "Himalayan","Bailey","Kingfisher"], {}, { :class => 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :mobile %>
    <%= f.text_field :mobile, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-raised btn-info" %>
  </div>
</div>
<% end %>
